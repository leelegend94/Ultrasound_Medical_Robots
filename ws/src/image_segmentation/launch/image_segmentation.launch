<?xml version="1.0"?>
<launch>
	<arg name="model" default="iiwa14"/>
    <!-- LAUNCH IMPLEMENTATION -->
    <rosparam command="load" file="$(find image_segmentation)/launch/config/config.yaml" />

    <include file="$(find iiwa_gazebo)/launch/iiwa_gazebo_with_sunrise.launch">
    <arg name="model" value="$(arg model)" />
  	</include>

  	<node name="image_segmentation" pkg="image_segmentation" type="image_segmentation_node" output="screen" />

  	<node name="rviz" pkg="rviz" type="rviz" />
    
</launch>